{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "ESNext",
    "types": ["jest", "vuetify", "node"],
    "typeRoots": ["./node_modules/@types", "./node_modules/vuetify/types"],
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.json"
    },
  ],
  "include": ["src", "env.d.ts"]
}
